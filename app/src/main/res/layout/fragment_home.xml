<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="@dimen/horizontal_padding"
    android:paddingEnd="@dimen/horizontal_padding"
    android:paddingTop="@dimen/vertical_padding"
    android:clickable="true"
    android:focusable="true"
    tools:context=".fragments.HomeFragment">


    <ImageView
        android:id="@+id/imgLogo"
        android:src="@drawable/img_logo"
        android:layout_margin="@dimen/space_m"
        android:layout_centerHorizontal="true"
        android:layout_width="@dimen/logo_width"
        android:layout_height="@dimen/logo_height"/>

    <ImageView
        android:id="@+id/btnWorker"
        android:src="@drawable/btn_worker"
        android:layout_below="@id/imgLogo"
        android:layout_margin="@dimen/space_m"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="@dimen/pri_button_height"/>


    <RelativeLayout
        android:layout_below="@id/btnWorker"
        android:layout_centerHorizontal="true"
        android:layout_width="@dimen/logo_width"
        android:layout_height="wrap_content" >


        <ImageView
            android:id="@+id/btnAdaptive"
            android:src="@drawable/btn_adaptive"
            android:layout_margin="@dimen/space_s"
            android:layout_alignParentStart="true"
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/button_height"/>

        <ImageView
            android:id="@+id/btnTechnology"
            android:layout_alignParentEnd="true"
            android:src="@drawable/btn_technology"
            android:layout_margin="@dimen/space_s"
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/button_height"/>


        <ImageView
            android:id="@+id/btnTechnical"
            android:src="@drawable/btn_technical"
            android:layout_below="@id/btnAdaptive"
            android:layout_margin="@dimen/space_s"
            android:layout_alignParentStart="true"
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/button_height"/>

        <ImageView
            android:id="@+id/btnLocateUs"
            android:layout_alignParentEnd="true"
            android:src="@drawable/btn_locate_us"
            android:layout_below="@id/btnTechnology"
            android:layout_margin="@dimen/space_s"
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/button_height"/>



    </RelativeLayout>



</RelativeLayout>